{
  "name": "@worker-toolbox/worker-toolbox",
  "version": "0.0.1",
  "repository": "kayteh/worker-toolbox",
  "author": "Worker Toolbox CI <gitworkertoolboxci@kat.cafe>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s clean build:all",
    "build:all": "yarn workspaces run prepublish",
    "clean": "rimraf packages/*/dist",
    "lint": "run-p -c lint:*",
    "lint:prettier": "prettier -c **/*.{js,jsx,ts,tsx,json,yaml}",
    "test": "jest"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.30.0",
    "@auto-it/conventional-commits": "^10.30.0",
    "@auto-it/first-time-contributor": "^10.30.0",
    "auto": "^10.30.0",
    "conventional-changelog-gitmoji-config": "^1.4.3",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "prettier-plugin-pkg": "^0.10.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      [
        "conventional-commits",
        {
          "preset": "gitmoji"
        }
      ],
      "first-time-contributor",
      "released"
    ]
  }
}
