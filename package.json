{
  "name": "@worker-toolbox/worker-toolbox",
  "version": "0.0.1",
  "repository": "kayteh/worker-toolbox",
  "author": "Worker Toolbox CI <gitworkertoolboxci@kat.cafe>",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "run-s clean build:first build:middle build:last",
    "build:first": "run-p build:first:*",
    "build:first:ewh": "yarn workspace @worker-toolbox/express-worker-handler run prepublish",
    "build:first:kv": "yarn workspace @worker-toolbox/kv run prepublish",
    "build:last": "run-p build:last:*",
    "build:last:bpesb": "yarn workspace @worker-toolbox/build-plugin-esbuild run prepublish",
    "build:last:bpwp4": "yarn workspace @worker-toolbox/build-plugin-webpack4 run prepublish",
    "build:middle": "run-s build:middle:*",
    "build:middle:ctx": "yarn workspace @worker-toolbox/worker-context run prepublish",
    "build:middle:runtime": "yarn workspace @worker-toolbox/worker-runtime run prepublish",
    "build:middle:zzz-dev-server": "yarn workspace @worker-toolbox/dev-server run prepublish",
    "clean": "rimraf packages/*/dist",
    "lint": "run-p -c lint:*",
    "lint:prettier": "prettier -c **/*.{js,jsx,ts,tsx,json,yaml}",
    "lint:tsc": "yarn workspaces run tsc --noEmit",
    "test": "jest"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.29.2",
    "@auto-it/conventional-commits": "^10.29.2",
    "@auto-it/first-time-contributor": "^10.29.2",
    "auto": "^10.29.2",
    "conventional-changelog-gitmoji-config": "^1.4.3",
    "eslint": "^7.26.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "2.1.0",
    "prettier-plugin-pkg": "^0.9.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      [
        "conventional-commits",
        {
          "preset": "gitmoji"
        }
      ],
      "first-time-contributor",
      "released"
    ]
  }
}
